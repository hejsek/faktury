<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Přihlášení</title>

    <!-- Core CSS - Include with every page -->
	<link href="{$basePath}/css/bootstrap.min.css" rel="stylesheet">
	<link href="{$basePath}/css/custom.css" rel="stylesheet">

	<link href="{$basePath}/css/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- SB Admin CSS - Include with every page -->
	<link href="{$basePath}/backend_files/css/sb-admin.css" rel="stylesheet">

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default" style="margin-top: 60px;">
                    <div class="panel-heading">
                        <h3 class="panel-title">Zadejte prosím vaše uživatelské jméno a heslo.</h3>
                    </div>

                    <div class="panel-body">
					{foreach $flashes as $flash}
						<div class="flash {$flash->type}">{$flash->message}</div>
					{/foreach}
                        {form formLogin, role => "form"}
                            <fieldset>
                                <div class="form-group">
									{input username, class=>"form-control", placeholder=>"Uživatelské jméno", autofocus}
                                </div>
                                <div class="form-group">
									{input password, class=>"form-control", placeholder=>"Heslo"}
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
								{input submit, class=>"btn btn-lg btn-success btn-block"}
                            </fieldset>
							<small><a class="pull-right register" n:href="Login:register">Registrovat</a></small>
                        {/form}

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Scripts - Include with every page -->
	<script src="{$basePath}/js/jquery-1.10.2.js"></script>
	<script src="{$basePath}/js/bootstrap.min.js"></script>
    <script src="{$basePath}/js/plugins/metisMenu/jquery.metisMenu.js"></script>
	<script src="{$basePath}/js/netteForms.js"></script>


    <!-- SB Admin Scripts - Include with every page -->
    <script src="js/sb-admin.js"></script>

</body>

</html>
